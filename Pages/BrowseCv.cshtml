@page "{handler?}"
@model WebApplication1.Pages.BrowseCv
@{
}

<table class="table table-bordered table-striped mt-3">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Grade</th>
                    <th></th>
                </tr>
    @{
        
        
            foreach (var user in @Model.userList)
                    {
                            <tr>

                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.Gender</td>
                                <td>@user.Grade</td>
                                <td class="p-2">
                                    <form asp-page-handler="OnPost" enctype="multipart/form-data">
                                        <input type="hidden" asp-for="@Model.Id" value="@user.UserId" />
                                        <div class="w-8 btn-group" role="group">
                                            <a asp-page="CVDetails" asp-route-id="@user.UserId" class="btn btn-primary mx-2">
                                                Details
                                            </a>
                                            <a asp-page="EditCV" asp-route-id="@user.UserId" class="btn btn-warning mx-2">
                                                Edit
                                            </a>
                                            <button type="submit" class="btn btn-danger mx-2" @*onclick="return confirm('Are you sure you want to delete?');"*@>
                                                Delete
                                            </button>
                                        </div>
                                    </form>
                                </td>
                            </tr>

                    }
                    
        
        

    }
            </table>


